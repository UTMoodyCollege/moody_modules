<a href="{{ link_to_content }}" class="featured-news d-block position-relative overflow-hidden text-decoration-none text-bold">
	<div class="bg-image position-relative text-white d-flex flex-column justify-content-end align-items-start"
	     style="background-image: url('{{ highlighted_image_uri }}'); background-position: center; background-repeat: no-repeat; background-size: cover;">
		{% if feature_node.field_news_categories.0.entity.label is not empty %}
			<div class="category text-burntorange position-absolute">
				{{ feature_node.field_news_categories.0.entity.label }}
			</div>
		{% endif %}
		<div class="title-and-teaser">
			<h1 class="mb-2 title">{{ feature_node.title.value }}</h1>
			{% if field_featured_news_teaser is not empty %}
				<div class="teaser">{{ field_featured_news_teaser }}</div>
			{% endif %}
		</div>
	</div>
</a>
